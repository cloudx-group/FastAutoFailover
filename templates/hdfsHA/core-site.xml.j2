<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://{{ hadoop_hdfs_master_host }}/</value>
    </property>

    <property>
        <name>fs.default.name</name>
        <value>hdfs://{{ hadoop_hdfs_master_host }}:8020</value>
    </property>

    <property>
        <name>dfs.journalnode.edits.dir</name>
        <value>{{ hadoop_hdfs_master_host }}/journalnode/HA_cx_cloud_datalake</value>
    </property>

     <!-- added while zookeeper configure-->
     <property>
        <name>ha.zookeeper.quorum</name>
        <value>{{ ip_nn1 }}:2181,{{ ip_nn2 }}:2181,{{ ip_nn3 }}:2181</value>
     </property>
</configuration>